{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es6",
    "lib": ["es6", "dom"],
    "module": "ES6",
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@images/*": ["public/images/*"]
    },
  },
  "exclude": ["dist"]
}
